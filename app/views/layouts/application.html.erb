<!DOCTYPE html>
<html>
<head>
  <title>Flitter-Fox</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render 'layouts/nav' %>

  <% if params[:id] != nil %>
    <% @url = 'user/' + params[:id] %>
    <% if current_page?(@url) %>
      <img src="/usrImg.jpg" class="profile-banner">
      <div class="row">
        <div class="col-sm-12" style="background-color: white;">
          <div class="container">
            <div class="col-sm-3"></div>
            <div class="col-sm-6">
              <div class="col-sm-2" style="font-size: 80%; opacity: 0.7;">POSTS<br>
                <h6 style="color: #0084B4; font-size: 150%;">16</h6>
              </div>
              <div class="col-sm-2" style="font-size: 80%; opacity: 0.7;">FOLLOWERS<br>
                <h6 style="color: #0084B4; font-size: 150%;">16</h6>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>

  <div class="container">
       <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
    <%= yield %>

  </div>

</body>
</html>
